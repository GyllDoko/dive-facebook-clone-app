<h1>Post Detail</h1>
<div class="">
    <div class="card w-100">

        <%= image_tag @post.image.url, class: "card-img-top"%>

        <div class="card-body">

            <h5 class="card-title"><%= @post.title %></h5>


            <p class="card-text"><%= @post.content %></p>
        </div>
        <div class="card-footer clearfix">
            <small class="text-muted" style="float: right;"><%= @post.created_at %></small>

            <p><%= link_to 'Edit', edit_post_path(@post), class: "btn btn-warning" %></p>
            <p><%= link_to 'Back', posts_path , class: "btn btn-outline-secondary" %></p>
        </div>
    </div>
</div>